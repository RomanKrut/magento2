<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="tsg_kickstart_sales_bestsellers" resource="sales" engine="innodb" comment="Tsg Kick Start bestsellers">
        <column xsi:type="int" name="id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="boolean" name="is_featured" nullable="false" comment="Is featured?"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
        <index referenceId="TSG_KICKSTART_SALES_BESTSELLERS_IS_FEATURED" indexType="btree" disabled="false">
            <column name="is_featured"/>
        </index>

    </table>
</schema>
